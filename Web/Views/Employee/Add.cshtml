@model Domain.Dtos.AddEmployeeDto

<form method="post" asp-action="Add">
    <div class="form-group">
        <label>Employee Name</label>
        <input asp-for="Name" type="text" class="form-control"  placeholder="Enter employee name">
        <span class="text-danger" asp-validation-for="Name">"</span>
    </div>
    <div class="form-group">
        <label>Employee Email</label>
        <input asp-for="Email" type="text" class="form-control"  placeholder="Enter employee Email">
        <span class="text-danger" asp-validation-for="Email">"</span>
    </div>
    <div class="form-group">
        <label>Employee Image</label>
        <input asp-for="Image" type="text" class="form-control"  placeholder="Enter employee Image">
        <span class="text-danger" asp-validation-for="Image">"</span>
    </div>
      <div class="form-group">
                <label>Department Name</label>
                <select class="form-control" asp-for="DepartmentId">
                @foreach (var item in  ViewBag.deparments )
                {
                    <option value="@item.Id">

                        @item.Name
                    </option>
                }

                </select>
                <span asp-validation-for="DepartmentId"></span>
            </div>
    <div class="form-group">
        <label>Employee Phone</label>
        <input asp-for="Phone" type="text" class="form-control"  placeholder="Enter employee Phone">
        <span class="text-danger" asp-validation-for="Phone">"</span>
    </div>





    <button type="submit" class="btn btn-primary">Add</button>
</form>